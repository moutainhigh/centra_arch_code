<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="trace">
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
    <RollingRandomAccessFile name="RollingFile" fileName="${sys:user.home}/logs/ic-pay-web.log"
                     filePattern="${sys:user.home}/logsbak/ic-pay-web-%d{yyyy-MM-dd}.log.gz">
       <PatternLayout>
         <Pattern>%d %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
       </PatternLayout>
       <Policies>
         <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
       </Policies>
       <DefaultRolloverStrategy>  
                <!-- 删除指定目录下15天之前的日志  
                <Delete basePath="${sys:user.home}/logsbak" maxDepth="1">  
                    <IfFileName glob="dvp-pay-web*" />  
                    <IfLastModified age="2d" />  
                </Delete>  -->
       </DefaultRolloverStrategy> 
     </RollingRandomAccessFile>

  </Appenders>
  <Loggers>    

	<logger name="com.ifudata.ic" level="debug">
	</logger>
	
	
	<logger name="org.apache" level="warn">
	</logger>
	
   <Root level="info">
      <AppenderRef ref="RollingFile" />
      <!-- <AppenderRef ref="STDOUT" /> -->
    </Root>
  </Loggers>
  </Configuration>