.word-title'{'width:100%;display:inline-block;'}'
.word-title p'{'font-size:14px;margin-bottom:20px;'}'
.word-title .word'{'font-size:16px;color:#2c3e50'}'
.word-title p span'{'color:#2965e6'}'
.word-list'{'width:100%;float:left'}'
