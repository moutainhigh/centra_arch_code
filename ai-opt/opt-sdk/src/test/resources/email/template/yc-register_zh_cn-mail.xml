.word-list-text'{'width:100%;float:left;padding:30px 20px;'}'
.word-list-text ul li'{'line-height:25px;color:#6a6c6f'}'
.word-list-text ul li a'{'color:#2965e6'}'
.word-foot'{'width:100%;float:left;'}'
.word-foot p'{'margin:20px 0;'}'
.word-foot p a'{'color:#2965e6'}'
.word-foot p span'{'color:#2965e6;font-size:18px;'}'
.mail-footer-conter'{'width:100%;height:122px;background:#092e51;float:left;margin-top:20px;'}'
.footer-main'{'width:760px;margin:0 auto;'}'
.footer-main ul'{'width:100%;float:left;margin-top:20px;'}'
.footer-main ul li'{'float:left'}'
.footer-main ul .left p'{'float:left;color:#fff'}'
.footer-main ul .left .word'{'margin:22px 0 0 18px;font-size:12px;'}'
.footer-main ul .right'{'float:right;font-size:12px;text-align: right;color:#3f76aa;margin-top:20px;'}'
