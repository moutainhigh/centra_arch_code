<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>slp-mall-web</display-name>
  <filter>
	  <filter-name>xss-firewall</filter-name>
	  <filter-class>com.ai.net.xss.filter.XSSFilter</filter-class>
  </filter>	
  <filter-mapping>
	  <filter-name>xss-firewall</filter-name>
	  <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>sessionFilter</filter-name>
    <filter-class>com.ai.opt.uni.session.filter.CacheSessionFilter</filter-class>
    <init-param>
      <param-name>ignore_suffix</param-name>
      <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>sessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>ssoProxyFilter</filter-name>
  	<filter-class>com.ai.opt.sso.client.filter.FilterChainProxy</filter-class>
  	<init-param>
			<param-name>ignore_resources</param-name>
        <param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm,notifyUrl,shopcart/addProd,shopcart/updateProdNum,shopcart/deleteProd</param-value>
	</init-param>
  </filter>
   <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/logincheck</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/account/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ssoProxyFilter</filter-name>
  	<url-pattern>/payment/*</url-pattern>
  </filter-mapping>
   <filter-mapping>
       <filter-name>ssoProxyFilter</filter-name>
       <url-pattern>/shopcart/*</url-pattern>
   </filter-mapping>
   <filter-mapping>
       <filter-name>ssoProxyFilter</filter-name>
       <url-pattern>/myorder/*</url-pattern>
   </filter-mapping>
    <filter-mapping>
        <filter-name>ssoProxyFilter</filter-name>
        <url-pattern>*.chk</url-pattern>
    </filter-mapping>
  
  <filter>
		<filter-name>assembleUserInfoFilter</filter-name>
		<filter-class>com.ai.slp.mall.web.filter.AssembleUserInfoFilter</filter-class>
		<init-param>
			<param-name>ignore_suffix</param-name>
			<param-value>.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>assembleUserInfoFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <!-- <listener>
    <listener-class>org.jasig.cas.client.session.SingleSignOutHttpSessionListener</listener-class>
  </listener> -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
    	classpath:context/core-context.xml
    	classpath*:spring/velocity/spring-velocity.xml
    </param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>encoding</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <!-- ajax登录检查 -->
    <filter>
        <filter-name>ajaxLoginFilter</filter-name>
        <filter-class>com.ai.slp.mall.web.filter.AjaxLoginFilter</filter-class>
        <init-param>
            <param-name>redirect_url</param-name>
            <param-value>.chk</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>*.chk</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>/shopcart/addProd</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>/shopcart/updateProdNum</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>/shopcart/deleteProd</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>/product/orderCommit</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ajaxLoginFilter</filter-name>
        <url-pattern>/product/toOrderPay</url-pattern>
    </filter-mapping>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
                classpath*:context/springmvc-servlet.xml
            </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>readonly</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
   </servlet>
  
</web-app>